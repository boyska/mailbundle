#!/bin/bash
### simple wrapper for notmuch
basedir="$(readlink -f "$(dirname "$0")/../")"
source "$(readlink -f "$basedir/activate")"
unread=$(notmuch count \
    "tag:unread and NOT tag:killed $(jq < "$basedir/mailbundle.json" -r '.search.queryAppend.Unread' )")
outbox="$(find "$basedir/outbox" -maxdepth 1 -type f |wc -l)"
if [[ "$outbox" -ne 0 ]]
then
    echo "$unread+$outbox"
else
    echo "$unread"
fi
